        android:id="@+id/BinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Zero"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/BIN"
